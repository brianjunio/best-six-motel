<Window x:Class="bestsixapp.RoomMake"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bestsixapp"
        mc:Ignorable="d"
        Name="RoomWindow"
        Title="Managing Rooms" Height="710" Width="1156.4">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>

        </Grid.RowDefinitions>
        <Button Name="EditRoomButton" Grid.Row ="5" Grid.Column="1"  Content ="Edit Rooms" Margin="5,5,10,5" Click="EditRoomClick" Padding="2"/>
        <Button Name="AddRoomButton" Grid.Row ="5" Grid.Column="2"  Content ="Add Rooms" Margin="5,5,10,5" Click="CreateRoomClick" Padding="2"/>
        <Button Name="MoveRoomButton" Grid.Row ="5" Grid.Column="3"  Content ="Move Rooms" Margin="5,5,10,5" Click="MoveRoomButton_Click" Padding="2"/>
        <Border Name="CanvasBorder" Grid.ColumnSpan="7" Grid.Row="0" BorderThickness="2"  BorderBrush="Black">

            <Canvas Name="RoomCanvas" Background="AliceBlue" ClipToBounds="True"  >
               
            </Canvas>
        </Border>
    </Grid>
</Window>
